@model IEnumerable<EventManagerApp.ViewModels.TicketListViewModel>
@{
    ViewBag.Title = "MyTickets";
}

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Event Name
            </th>
            <th>
                Location
            </th>
            <th>
                Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:20px">
                    @obj.Id
                </td>
                <td style="width:20%">
                    @Html.ActionLink(obj.Event.Name, "Details", "Events", new { id = obj.Event.Id }, null)
                </td>
                <td>
                    @obj.Event.Place
                </td>
                <td>
                    @obj.Event.Date
                </td>
            </tr>
        }
    </tbody>
</table>

